{
    "preRun": [
        "g++",
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-Wconversion",
        "-Wshadow",
        "-Wfloat-equal",
        "-Wlogical-op",
        "-Wshift-overflow=2",
        "-Wduplicated-cond",
        "-D_GLIBCXX_DEBUG",
        "-D_GLIBCXX_DEBUG_PEDANTIC",
        "-Wl,--stack,268435456",
        "-O2",
        "-DDEBUG",
        "-ggdb3",
        "-DACMX",
        "$CODE",
        "-o",
        "$OUTPUT",
        "--debug"
    ],
    "run": [
        "$OUTPUT"
    ],
    "ext": "cpp"
}